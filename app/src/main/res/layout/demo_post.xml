<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle"
            android:backgroundTint="#EAEAEA" />

        <View
            android:id="@+id/view17"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginStart="22dp"
            android:background="#EAEAEA"
            android:backgroundTint="#EAEAEA"
            app:layout_constraintBottom_toBottomOf="@+id/view19"
            app:layout_constraintStart_toEndOf="@+id/view19"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintVertical_bias="0.19999999" />

        <View
            android:id="@+id/view19"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:background="#EAEAEA"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintVertical_bias="0.9" />

        <View
            android:id="@+id/view18"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:background="#EAEAEA"
            app:layout_constraintStart_toStartOf="@+id/view17"
            app:layout_constraintTop_toBottomOf="@+id/view17" />

        <View
            android:id="@+id/view20"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:background="#EAEAEA"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <View
            android:id="@+id/view21"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="#EAEAEA"
            app:layout_constraintTop_toBottomOf="@+id/view20" />

        <View
            android:id="@+id/view22"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#EAEAEA"
            app:layout_constraintEnd_toStartOf="@+id/view23"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view21" />

        <View
            android:id="@+id/view23"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#EAEAEA"
            app:layout_constraintEnd_toStartOf="@+id/view24"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view22"
            app:layout_constraintTop_toTopOf="@+id/view22" />

        <View
            android:id="@+id/view24"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view23"
            app:layout_constraintTop_toTopOf="@+id/view22" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>